        <div class="container-fluid main-container">
                <div class="create-content-container row">
                    <div class="content view row justify-content-center">
                        <form method="post" action="register" id="regpage">
                            <p class="welcome" id="mes">Join Memeify</p>
                    
                            <p class="prompt">Username</p>
                            <input type="text" name="username" placeholder="Required" id="user">
                        
                            <p class="prompt">Password</p>
                            <input type="password" name="password" placeholder="Required" id="pass">
                        
                            <p class="prompt" id="description">Description</p>
                            <textarea class="form" name="desc" type="text" id="desc" placeholder="Optional"></textarea>

                            <input type="submit" id="signup" value="Register">
                        </form>
                    </div>
                </div>
        </div>

